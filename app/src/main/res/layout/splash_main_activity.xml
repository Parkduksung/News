<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:ignore="ContentDescription">


    <ImageView
        android:id="@+id/iv_splash_main_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/news_background_circle"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_splash_main_domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_splash_main_news"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_splash_main_news"
        app:layout_constraintStart_toEndOf="@id/iv_splash_main_news"
        app:srcCompat="@drawable/public_domain" />

    <ImageView
        android:id="@+id/iv_splash_main_rss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/iv_splash_main_news"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/iv_splash_main_news"
        app:layout_constraintRight_toLeftOf="@id/iv_splash_main_news"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rss_transparent" />

    <TextView
        android:id="@+id/tv_splash_label1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="@string/splash_label1"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv_splash_label2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_splash_label1"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:text="@string/splash_label2"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_label1"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv_splash_label3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_splash_label2"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:text="@string/splash_label3"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_splash_label2"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

</androidx.constraintlayout.widget.ConstraintLayout>